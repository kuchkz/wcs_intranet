{% extends 'layout.html.twig' %}
{% block title %}Edition des catégories{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="enteteArticle title text-white">
                <h1>Articles</h1>
                <h2 class="pt-2">Validation d'articles</h2>
            </div>
        </div>
    </div>

    <div class="container mt-5">
        <div class="row">
            <div class="col mt-2 mb-5">
                <form method="post">
                    <div class="form-group row">
                        <label for="name" class="col-xs-12 col-md-4 col-form-label">Nom de la catégorie *</label>
                        <div class="col-xs-12 col-md-8">
                            <input type="text" value="{{ category.name }}" name="name" id="name" class="form-control here">
                            <p>{{ error }}</p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="offset-4 col-xs-12 col-md-8">
                            <input type="submit" class="btn orange text-white" value="Editer la catégorie">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}