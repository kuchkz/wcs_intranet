{% extends 'layout.html.twig' %}
{% block title %}Initialisez votre profil{% endblock %}
{% block header %}{% endblock %}
{% block content %}
    <div class="container">
        <div class="row mt-5">
            <div class="col-12 mt-5">
                <img src="/assets/images/favicon.png" class="rounded mx-auto d-block" alt="icone">
            </div>
            <div class="col mt-2 mt-5 mb-5">
                <form method="post" action="/init">
                    <div class="form-group row">
                        <input type="hidden" value="{{ user.id }}" name="id">
                        <input type="hidden" value="{{ user.code }}" name="code">
                        <label for="password" class="col-xs-12 col-md-4 col-form-label">Password*</label>
                        <div class="col-xs-12 col-md-8">
                            <input type="password" placeholder="Please enter your new password" name="password" id="password" class="form-control here">
                            <small>8 caractères minimum.</small>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="passwordConfirm" class="col-xs-12 col-md-4 col-form-label">Confirm your password*</label>
                        <div class="col-xs-12 col-md-8">
                            <input type="password" placeholder="Please confirm your password" name="passwordConfirm" id="passwordConfirm" class="form-control here">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="offset-4 col-xs-12 col-md-8">
                            <p>{{ errors['password'] }}</p>
                            <button type="submit" class="btn orange text-white btn-xs">Enregistrer les modifications</button>
                        </div>
                    </div>
                    <small class="form-text text-muted">Les champs marqués d'un * sont obligatoires.</small>
                </form>
            </div>
        </div>
    </div>
{% endblock %}